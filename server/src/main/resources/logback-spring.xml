<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
    <!--
        Logback-Konfiguration mit drei separaten Dateien:
          1) audit.log       (f端r Audit-Infos)
          2) performance.log (f端r Performance-Infos)
          3) error.log       (f端r Fehlermeldungen)
        Und weiterhin Ausgabe auf Konsole.
    -->

    <!-- Pattern for normal logs -->
    <property name="DEFAULT_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>

    <!-- Pattern for request logs -->
    <property name="REQUEST_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %X{clientIp} %X{user} %X{status} %X{executionTime}ms %msg%n"/>


    <!-- === KONSOLE-APPENDER === -->
    <appender name="ConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- === AUDIT-APPENDER === -->
    <appender name="AuditFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/audit.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/audit-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [AUDIT] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- === ERROR-APPENDER === -->
    <appender name="ErrorFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/console.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/error-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <!-- Nur ab ERROR-Level -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level><!-- TODO Change back to ERROR -->
        </filter>
    </appender>

    <!-- ========================================================== -->
    <!-- File Appender for REQUEST Logs                             -->
    <!-- ========================================================== -->
    <appender name="RequestFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/request.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/request-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${REQUEST_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- === LOGGER f端r Audit === -->
    <logger name="at.ac.tgm.diplomarbeit.diplomdb.audit" level="INFO" additivity="false">
        <appender-ref ref="AuditFileAppender"/>
        <appender-ref ref="ConsoleAppender"/> <!-- optional -->
    </logger>

    <!-- Logger that writes ONLY request logs -->
    <logger name="REQUEST_LOGGER" level="INFO" additivity="false">
        <appender-ref ref="RequestFileAppender"/>
    </logger>

    <!-- Standard-Fehler-Logger: Alle ERRORs => error.log -->
    <root level="INFO">
        <appender-ref ref="ConsoleAppender"/>
        <appender-ref ref="ErrorFileAppender"/>
    </root>

</configuration>
